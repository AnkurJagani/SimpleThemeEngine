<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.pddstudio.simplethemeengine.sample.MainActivity">

    <TextView
        android:id="@+id/card_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_header_text"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_header_text"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">

            <Button
                android:id="@+id/button_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_change_prim"
                style="?android:buttonBarButtonStyle"/>

            <Button
                android:id="@+id/button_primary_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_change_prim_dark"
                style="?android:buttonBarButtonStyle"/>

            <Button
                android:id="@+id/button_accent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_change_accent"
                style="?android:buttonBarButtonStyle"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
